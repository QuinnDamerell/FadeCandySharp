<Window x:Class="FadeCandySharpSample.PongGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleSample" Height="200" Width="400"
        KeyDown="Window_KeyDown">
    <StackPanel>
        <StackPanel Margin="12" Orientation="Horizontal">
            <TextBlock Text="Pong!" Margin="0" FontSize="30" Foreground="Blue" />
        </StackPanel>

        <TextBlock x:Name="TitleBlock" Text="Because why not?" TextWrapping="Wrap" Margin="12" />

        <Button x:Name="Play" Content="Play!" Margin="12" Padding="5" FontSize="12" Click="Play_Click"/>
    </StackPanel>
</Window>
