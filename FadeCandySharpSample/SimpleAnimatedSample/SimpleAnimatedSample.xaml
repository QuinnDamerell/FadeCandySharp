<Window x:Class="FadeCandySharpSample.SimpleAnimatedSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleSample" Height="590" Width="400">
    <StackPanel>
        <StackPanel Margin="12" Orientation="Horizontal">
            <TextBlock Text="Simple Animated Sample" Margin="0" FontSize="30" Foreground="Blue" />
        </StackPanel>

        <TextBlock x:Name="TitleBlock" Text="This is a super simple sample that connects to a fadecandy running locally on the default port, creates a 8 x 8 grid panel, and changes the light colors." TextWrapping="Wrap" Margin="12" />

        <Button x:Name="Start" Content="Start" Margin="12" Padding="5" FontSize="12" Click="Start_Click"/>

        <Button x:Name="Stop" Content="Stop" Margin="12" Padding="5" FontSize="12" Click="Stop_Click"/>

        <Button x:Name="UseColor" Content="User Color" Margin="12" Padding="5" FontSize="12" Click="UseColor_Click"/>

        <Button x:Name="UseRandom" Content="Use Random" Margin="12" Padding="5" FontSize="12" Click="UseRandom_Click"/>

        <TextBlock x:Name="BrightnessLable" Text="Brightness" TextWrapping="Wrap" Margin="12,12,12,0" />

        <Slider x:Name="BrightnessSlider" Margin="12" ValueChanged="BrightnessSlider_ValueChanged" />

        <TextBlock x:Name="Status" Text="Status: Disconnected" TextWrapping="Wrap" Margin="12"  />
    </StackPanel>
</Window>
